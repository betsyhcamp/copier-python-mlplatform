name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  check:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version-file: .python-version

      - name: Install uv
        uses: astral-sh/setup-uv@v4

      - name: Install Task
        uses: arduino/setup-task@v2
        with:
          version: 3.x

      - name: Install dependencies
        run: uv sync

      - name: Run pre-commit (file utilities + lint + format-check)
        run: task pre-commit

      - name: Run tests
        run: task test
{% if project_type in ['package', 'pipeline-kfp'] %}

      - name: Build documentation
        run: task docs
{% endif %}
{% if project_type == 'package' %}

      - name: Build package
        run: task build
{% endif %}
